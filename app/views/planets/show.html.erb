<div class="container">
  <h2>Planet name: <%= @planet.name %></h2>
  <br>
  Size: <%= @planet.size %> KM
  <br>
  <br>
  Distance from Earth: <%= @planet.distance_from_sun %> KM
  <br>
  <br>
  Price per day: Â£<%= @planet.price_per_day %>
  <hr>
  <%= link_to "Back to base", planets_path, class: "btn btn-primary" %>
  <br>
  <br>

  <%= link_to "Book this planet", new_planet_booking_path(@planet), class: "btn btn-success" %>
  <br>
  <br>
  
  <% if @user.id == @planet.user_id %>
    <div class="delete-btn">
      <%= link_to planet_path(@planet), method: :delete, data: { confirm: "Charging the Death Star... Fire?" } do %>
        <i class="fas fa-bomb"></i> Exterminate
      <% end %>
    </div>  
  <% end %>
</div>
