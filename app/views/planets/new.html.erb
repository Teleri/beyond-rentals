<div class="container">
  <h1><strong>Create a planet</strong></h1>
  <div class="new-planet-form">
    <%= simple_form_for (@planet) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :size, placeholder: 'Radius in km'%>
    <%= f.input :distance_from_sun, placeholder: 'Distance in million km' %>
    <%= f.input :price_per_day %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
  </div>
  <% end %>
</div>

