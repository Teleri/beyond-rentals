<h1>create a planet</h1>


<div class="container">
  <%= simple_form_for (@planet) do |f| %>
  <%= f.input :name %>
  <%= f.input :size %>
  <%= f.input :distance_from_sun, placeholder: 'Indicate distance in millions' %>
  <%= f.input :price_per_day %>
  <%= f.input :image %>
  <%= f.submit %>
</div>

<% end %>

