<div class="container">
  <div class="col-sm-6 offset-sm-3 mt-3 mb-3">
    <h1><strong>Create a planet</strong></h1>
    <div class="new-planet-form">
      <%= simple_form_for (@planet) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :size, placeholder: 'Radius in km'%>
      <%= f.input :distance_from_sun, placeholder: 'Distance in million km' %>
      <%= f.input :price_per_day %>
      <div class="d-flex justify-content-between">
        <%= f.input :has_oxygen %>
        <%= f.input :has_wifi %>
        <%= f.input :has_water %>
        <%= f.input :has_starbucks %>
      </div>
      <%= f.input :photo, label: "Image", as: :file %>
      <%= f.submit "Create Planet", class: "btn btn-dark btn btn-block" %>
  </div>
  <% end %>
  </div>

</div>

